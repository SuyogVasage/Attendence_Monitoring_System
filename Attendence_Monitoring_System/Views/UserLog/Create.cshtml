@model Attendence_Monitoring_System.Models.UserLog

@{
    ViewData["Title"] = "Create";
}


<html>
    <head>
        <title>JavaScript</title>
        <link rel="stylesheet" href="style.css">
    </head>
    <body onload="timerButton()">
        <div id="stopwatch">
            00:00:00
        </div>
        <ul id="buttons">
            <li><button onclick="startTimer()" id="IN" class ="btn btn-primary">Check In</button></li>
            <li><button onclick="stopTimer()" id="OUT" class ="btn btn-primary">Check Out</button></li>
        </ul>
        <br>
        <br>
        <a asp-action="Get" asp-controller="AttendenceLog" class="button2" style="background-color:yellow;">History</a>
        <br>
        <br>
        <a asp-action="Get" asp-controller="UserDetail" class="button3" style="background-color:yellow;">Profile</a>
        <br>
        <a asp-action="LogOut" asp-controller="User" class="button5" style="background-color:yellow;">LogOut</a>
        <br>
        @if(@ViewBag.RoleId == 102)
        {
            <a asp-action="GetEmployee" asp-controller="Employee" class="button4" style="background-color:yellow;">Employees</a>
        }
        <script src="main.js"></script>
    </body>
</html>


<script>
    const timer = document.getElementById('stopwatch');
    debugger;
    var stoptime = false;
     var hr = 0; 
     var min = 0;
     var sec = 0;
     function timerButton()
     {
         if(@ViewBag.inOut == 1)
        {
            hr = @ViewBag.hr; 
            min = @ViewBag.min;
            sec = @ViewBag.sec;
           $('#OUT').prop('disabled', false);
           $('#IN').prop('disabled', true);
           timerCycle();
        }
        if(@ViewBag.inOut == 0)
        {
            hr = @ViewBag.hr; 
            min = @ViewBag.min;
            sec = @ViewBag.sec;
           $('#OUT').prop('disabled', true);
           $('#IN').prop('disabled', false);
            
        }
        if(@ViewBag.inOut == 2)
        {
            $('#OUT').prop('disabled', true);
            $('#IN').prop('disabled', false);
        }
     }
      
function startTimer() {
    
  if (stoptime == true) {
        stoptime = false;
        timerCycle();
         }

            $.ajax({
                url: "/UserLog/Create",
                data: {'Status':"IN"},
                type: "POST",
            });

      $('#IN').prop('disabled', true);
      $('#OUT').prop('disabled', false);
       
}
function stopTimer() {
  if (stoptime == false) {
    stoptime = true;
  }

         $.ajax({
            url: "/UserLog/Create",
            data: {'Status':"OUT"},
            type: "POST",
            });

            $('#OUT').prop('disabled', true);
            $('#IN').prop('disabled', false);
}

function timerCycle() {
     debugger;
    if (stoptime == false) {
    sec = parseInt(sec);
    min = parseInt(min);
    hr = parseInt(hr);

    sec = sec + 1;

    if (sec == 60) {
      min = min + 1;
      sec = 0;
    }
    if (min == 60) {
      hr = hr + 1;
      min = 0;
      sec = 0;
    }

    if (sec < 10 || sec == 0) {
      sec = '0' + sec;
    }
    if (min < 10 || min == 0) {
      min = '0' + min;
    }
    if (hr < 10 || hr == 0) {
      hr = '0' + hr;
    }

    timer.innerHTML = hr + ':' + min + ':' + sec;

    setTimeout("timerCycle()", 1000);
  }
}

function resetTimer() {
    timer.innerHTML = '00:00:00';
}
</script>


