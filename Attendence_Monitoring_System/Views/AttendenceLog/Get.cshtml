@model IEnumerable<Attendence_Monitoring_System.Models.AttendenceLog>

@{
    ViewData["Title"] = "Get";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalHours)
            </th>
            <th>
                 
            </th>
            <th>
                 
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHours)
            </td>
            <td>
               | @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            </td>
            <td>
                <a asp-action="Create" asp-controller="Regularization">Regularize</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-action="GetForUser" asp-controller="Regularization" class="btn btn-primary">Regularization Requests</a>
<br>
<br>
<a asp-action="Create" asp-controller="UserLog" class="btn btn-primary">Back</a>
